{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
    },
    "noImplicitThis": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "esnext",
    "allowJs": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports" : true,
    "experimentalDecorators": true,
    "esModuleInterop" : true,
    "moduleResolution": "node"
  },
  "lib": [
    "esnext"
  ],
  "exclude": ["node_modules"]
}